#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    setlocale(0, "");
    int zadanie, A, B, C, D, A1, B1, C1;
    cout << "Введите номер задания: ";
    cin >> zadanie;

    switch (zadanie)
    {
    case 1:
        cout << "Проверим истинность высказывания:\n«Справедливы неравенства A > 2 и B <= 3».\nВведиет А = ";
        cin >> A;
        cout << "Введиет В = ";
        cin >> B;
        cout << endl;
        if ((A > 2) && (B <= 3))
        {
            cout << "Истина";
        }
        else
            cout << "Ложь";
        break;
    case 2:
        cout << "Проверим истинность высказывания:\n«Справедливо двойное неравенство A < B < C».\nВведите А = ";
        cin >> A;
        cout << "Введите В = ";
        cin >> B;
        cout << "Введиет С = ";
        cin >> C;
        cout << endl;
        if (A < B && B < C)
        {
            cout << "Истина";
        }
        else
            cout << "Ложь";
        break;
    case 3:
        cout << "Проверим истинность высказывания:\n«Данное число является четным двузначным».\nВведите число = ";
        cin >> A;
        cout << endl;
        B = A % 2;
        C = A % 10;
        if (B == 0 && C != 0 && C < 10)
        {
            cout << "Истина";
        }
        else
            cout << "Ложь";
        break;
    case 4:
        cout << "Проверим истинность высказывания:\n«Цифры данного числа образуют возрастающую или убывающую последовательность».\nВведите трехзначное число = ";
        cin >> A;
        cout << endl;
        B = (A / 100) % 10;
        C = (A / 10) % 10;
        D = A % 10;
        if ((B < C && C < D) || (B > C && C > D))
        {
            cout << "Истина";
        }
        else
            cout << "Ложь";
        break;
    case 5:
        cout << "Проверим истинность высказывания:\n«Данное число читается одинаково слева направо и справа налево».\nВведите четырехзначное число = ";
        cin >> A;
        cout << endl;
        if ((A % 10 == A / 1000) && ((A / 10 % 10) == (A / 100 % 10)))
        {
            cout << "Истина";
        }
        else
            cout << "Ложь";
        break;
    case 6:
        cout << "Проверим истинность высказывания:\n«Треугольник со сторонами a, b, c является прямоугольным».\nВведите число а = ";
        cin >> A;
        cout << "Введите число b = ";
        cin >> B;
        cout << "Введите число с = ";
        cin >> C;
        cout << endl;
        A1 = B * B + C * C;
        B1 = A * A + C * C;
        C1 = A * A + B * B;
        if ((A * A == A1) || (B * B == B1) || (C * C == C1))
        {
            cout << "Истина";
        }
        else
            cout << "Ложь";
        break;
    case 7:
        cout << "Проверим истинность высказывания:\n«Существует треугольник со сторонами a, b, c».\nВведите число а = ";
        cin >> A;
        cout << "Введите число b = ";
        cin >> B;
        cout << "введите число C = ";
        cin >> C;
        cout << endl;
        if (((A + B) > C) && ((A + C) > B) && ((B + C) > A))
        {
            cout << "Истина";
        }
        else
            cout << "Ложно";
        break;
    }
    return 0;
}
