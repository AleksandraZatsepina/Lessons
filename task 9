#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    setlocale(0, "");
    int zadanie, N, K, k, B, C, A, S1, S2; 
    cout << "Введите номер задания: ";
    cin >> zadanie;
    
    switch (zadanie)
    {
    case 1:
        cout << "\nС начала суток прошло целое N секунд.\nНайдем количество секунд, прошедших с начала последней минуты.\nВведите N = ";
        cin >> N;
        N = N % 60;
        cout << "Количество прошедших секунд = " << N << " сек." << endl;
        break;

    case 2:
        cout << "Дано целое число K, лежащее в диапазоне 1–365.\nОпределим номер дня недели для K-го дня года, если известно, что в этом году 1 января было понедельником.\nВведите К = ";
        cin >> K;
        cout << "День недели = ";
        K = K % 7;
        switch (K)
        {
        case 0: cout << "Воскресенье(0)."; break;
        case 1: cout << "Понедельник(1)."; break;
        case 2: cout << "Вторник(2)."; break;
        case 3: cout << "Среда(3)."; break;
        case 4: cout << "Четверг(4)."; break;
        case 5: cout << "Пятница(5)."; break;
        case 6: cout << "Суббота(6)."; break;
        }
        break;

    case 3:
        cout << "Дано целое число K, лежащее в диапазоне 1–365, и целое число N, лежащее в диапазоне 1–7.\nОпределим номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N.\nВведите K = ";
        cin >> K;
        cout << "Введите N = ";
        cin >> N;
        K = (K + N - 1) % 7;
        switch (K)
        {
        case 0: cout << "Воскресенье(7)."; break;
        case 1: cout << "Понедельник(1)."; break;
        case 2: cout << "Вторник(2)."; break;
        case 3: cout << "Среда(3)."; break;
        case 4: cout << "Четверг(4)."; break;
        case 5: cout << "Пятница(5)."; break;
        case 6: cout << "Суббота(6)."; break;
        }
        break;

    case 4:
        cout << "На прямоугольнике размера A x B размещено максимально возможное количество квадратов со стороной C (без наложений).\nНайдем количество квадратов, размещенных на прямоугольнике, а также площадь незанятой части прямоугольника.\nВведите А = ";
        cin >> A;
        cout << "Введите В = ";
        cin >> B;
        cout << "Введиет C = ";
        cin >> C;
        N = A / C;
        K = B / C;
        k = N * K;
        S2 = (N*C) * (K*C);
        S1 = (A * B) - S2;
        cout << "Количество квадратов = " << k << "\nПлощадь незанятой части прямоугольника = " << S1 << endl;
        break;
    case 5:
        cout << "Определим номер столения, введенного года.\nВведите номер года = ";
        cin >> N;
        if ((N > 0) && (N <= 100))
        {
            k = 1;
            cout << "Номер столения = " << k << endl;
        }
        else if (N >= 101)
        {
            k = N % 100;
            if (k == 0)
            {
                K = (N / 100);
            }
            else
                K = (N / 100) + 1;
            cout << "Номер столения = " << K << endl;
        }
        return 0;
    }
}
