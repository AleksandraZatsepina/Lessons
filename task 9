#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    int zadanie, N, K;
    cout << "Введите номер задания: ";
    cin >> zadanie;
    
    switch(zadanie)
    {
    case 1:
    cout << "\nС начала суток прошло целое N секунд.\nНайдем количество секунд, прошедших с начала последней минуты.\nВведите N = ";
    cin >> N;
    N = N % 60;
    cout << "Количество прошедших секунд = " << N << " сек." <<endl;
    break;
    
    case 2:
    cout << "Дано целое число K, лежащее в диапазоне 1–365.\nОпределим номер дня недели для K-го дня года, если известно, что в этом году 1 января было понедельником.\nВведите К = ";
    cin >> K;
    cout << "День недели = ";
    K = K % 7;
    switch (K)
    { 
        case 0: cout << "Воскресенье(0).";break;
        case 1: cout << "Понедельник(1).";break;
        case 2: cout << "Вторник(2).";break;
        case 3: cout << "Среда(3).";break;
        case 4: cout << "Четверг(4).";break;
        case 5: cout << "Пятница(5).";break;
        case 6: cout << "Суббота(6).";break;
    }
    
    case 3:
    cout << "Дано целое число K, лежащее в диапазоне 1–365, и целое число N, лежащее в диапазоне 1–7.\nОпределим номер дня недели для K-го дня года, если известно, что в этом году 1 января было днем недели с номером N.\nВведите = К";
    cin >> K;
    cout << "Введите N";
    cin >> N;
    
    return 0;
    }
}
