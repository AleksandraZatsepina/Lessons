//ЗАДАНИЕ1
//Поменять местами содержимое переменных A и B и вывести новые значения A и B.

#include <iostream>

using namespace std;

int main()
{
    double A, B, C;
    cout << "Поменяем местами содержимое переменных A и B.\n" << "Введите переменную A = ";
    cin >> A;
    cout << "Введите переменную B = ";
    cin >> B;
    C = B;
    B = A;
    A = C;
    cout << "A = " << A << "\nB = " << B << endl;
    return 0;
}

//ЗАДАНИЕ2
//Даны переменные A, B, C. Изменить их значения, переместив содержимое A в B, B — в C, C — в A, и вывести новые значения переменных A, B, C.

#include <iostream>

using namespace std;

int main()
{
    double A, B, B1, C, C1;
    cout << "Изменим значения переменных A, B, и C, переместив содержимое A в B, B в C, C в A.\n";
    cout << "Введите значение переменных:\nA = ";
    cin >> A;
    cout << "B = ";
    cin >> B;
    cout << "C = ";
    cin >> C;
    B1 = B;
    C1 = C;
    B = A;  // A в B
    C = B1; // B в C
    A = C1; // C в A
    cout << "Новые значения переменных:\nA = " << A << "\nB = " << B << "\nC = " << C <<endl;
    return 0;
}

//ЗАДАНИЕ3
//Даны переменные A, B, C. Изменить их значения, переместив содержимое A в C, C — в B, B — в A, и вывести новые значения переменных A, B, C.

#include <iostream>

using namespace std;

int main()
{
    double A, A1, B, B1, C, C1;
    cout << "Изменим значения переменных A, B, и C, переместив содержимое A в C, C в B, B в A.\n";
    cout << "Введите значение переменных:\nA = ";
    cin >> A;
    cout << "B = ";
    cin >> B;
    cout << "C = ";
    cin >> C;
    B1 = B;
    C1 = C;
    A1 = A;
    C = A;  // A в C
    B = C1; // C в B
    A = B1; // B в A
    cout << "Новые значения переменных:\nA = " << A << "\nB = " << B << "\nC = " << C <<endl;
    return 0;
}
