//ЗАДАНИЕ1
//Поменять местами содержимое переменных A и B и вывести новые значения A и B.
#include <iostream>

using namespace std;

int main()
{
    double A, B, C;
    cout << "Поменяем местами содержимое переменных A и B.\n" << "Введите переменную A = ";
    cin >> A;
    cout << "Введите переменную B = ";
    cin >> B;
    C = B;
    B = A;
    A = C;
    cout << "A = " << A << "\nB = " << B << endl;
    return 0;
}

//ЗАДАНИЕ2
//Даны переменные A, B, C. Изменить их значения, переместив содержимое A в B, B — в C, C — в A, и вывести новые значения переменных A, B, C.

