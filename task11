#include <iostream>
#include <math.h>
using namespace std;

int main()
{
    setlocale(0, "");
    int zadanie, A, B, C, D, E, A1, B1, C1, X, Y;
    double AB, AC;
    cout << "Введите номер задания: ";
    cin >> zadanie;

    switch (zadanie)
    {
    case 1:
        cout << "Даны две переменные целого типа: A и B.\nЕсли их значения не равны, то присвоить каждой переменной большее из этих значений,\nа если равны, то присвоить переменным нулевые значения.\nВывести новые значения переменных A и B.\n\nВведите значение А = ";
        cin >> A;
        cout << "Введите значение В = ";
        cin >> B;
        if (A == B)
        {
            A = 0;
            B = 0;
            cout << "Переменные равны:\nA = " << A << "\nB = " << B << endl;
        }
        else if (A > B)
        {
            B = A;
            cout << "Значение переменной А больше В:\nA = " << A << "\nB = " << B << endl;
        }
        else if (A < B)
        {
            A = B;
            cout << "Значение переменной B больше A:\nA = " << A << "\nB = " << B << endl;
        }
        break;
    case 2:
        cout << "Даны три числа. Найти сумму двух наибольших из них.\n\nВведите значение первого числа = ";
        cin >> A;
        cout << "Введите значение второго числа = ";
        cin >> B;
        cout << "Введите значение третьего числа = ";
        cin >> C;
        A1 = A + B;
        B1 = B + C;
        C1 = C + A;
        if ((A1 > B1) && (A1 > C1))
        {
            cout << "\nСумма двух наибольших = " << A1 << endl;
        }
        else if ((B1 > A1) && (B1 > C1))
        {
            cout << "\nСумма двух наибольших = " << B1 << endl;
        }
        else
            cout << "\nСумма двух наибольших = " << C1 << endl;
        break;
    case 3:
        cout << "На плоскости расположены три точки: A, B, C.\nОпределить, какая из двух последних точек (B или C) расположена ближе к A, и вывести эту точку и ее расстояние от точки A.\nВведите точку А = ";
        cin >> A;
        cout << "Введите точку В = ";
        cin >> B;
        cout << "Введите точку С = ";
        cin >> C;
        AB = abs(A - B);
        AC = abs(A - C);
        if (AB < AC)
        {
            cout << "Точка В ближе к точке A.\nB = " << B << "\nРасстояние = " << AB << endl;
        }
        else if (AB == AC)
        {
            cout << "Точки В и С находятся на равном расстоянии от точки А.\nB = " << B << "\nC = " << C << endl;
        }
        else
            cout << "Точка С ближе к точке А.\nС = " << C << "\nРасстояние = " << AC << endl;
        break;
    case 4:
        cout << "Даны координаты точки, не лежащей на координатных осях OX и OY.\nОпределим номер координатной четверти, в которой находится данная точка.\nВведите координату X = ";
        cin >> X;
        cout << "Введите координату Y = ";
        cin >> Y;
        if ((X > 0) && (Y > 0))
        {
            cout << "Точка лежит в первой четверти." << endl;
        }
        else if ((X < 0) && (Y > 0))
        {
            cout << "Точка лежит во второй четверти." << endl;
        }
        else if ((X < 0) && (Y < 0))
        {
            cout << "Точка лежит в третьей четверти." << endl;
        }
        else if ((X > 0) && (Y < 0))
        {
            cout << "Точка лежит в четвертой плоскости." << endl;
        }
        break;
    case 5:
        cout << "Дано целое число\nВыведем его строку-описание вида.\nВведите целое число = ";
        cin >> A;
        if (A == 0)
        {
            cout << "Нулевое число" << endl;
        }
        else if ((A > 0) && (A % 2 == 0))
        {
            cout << "Положительное четное число" << endl;
        }
        else if ((A > 0) && (A % 2 != 0))
        {
            cout << "Положительно нечетное число" << endl;
        }
        else if ((A < 0) && (A % 2 == 0))
        {
            cout << "Отрицательное четное число" << endl;
        }
        else
            cout << "Отрицательное нечетное число" << endl;
        break;
    case 6:
        cout << "Дано целое число, лежащее в диапазоне 1–999.\nВыведем его строку-описание.\nВведите целое число = ";
        cin >> A;
        if ((A / 100 > 0) && (A / 100 < 10) && (A % 2 == 0))
        {
            cout << "Четное трехзначное число" << endl;
        }
        else if ((A / 100 > 0) && (A / 100 < 10) && (A % 2 != 0))
        {
            cout << "Нечетное трехзначное число" << endl;
        }
        else if ((A / 10 > 0) && (A / 10 < 10) && (A % 2 == 0))
        {
            cout << "Четное двузначное число" << endl;
        }
        else if ((A / 10 > 0) && (A / 10 < 10) && (A % 2 != 0))
        {
            cout << "Нечетное двузначное число" << endl;
        }
        else if ((A / 10 == 0) && (A % 2 == 0))
        {
            cout << "Четное однозначное число" << endl;
        }
        else if ((A / 10 == 0) && (A % 2 != 0))
        {
            cout << "Нечетное однозначное число" << endl;
        }
        break;
    }
    return 0;
}
