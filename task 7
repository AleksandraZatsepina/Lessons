#include <iostream>

using namespace std;

int main()
{
    int zadanie;
    const float pi = 3.14;
    double alfa, X, x, Y, y, A, a, B, V1, V2, S, T, A1, B1, C1, A2, B2, C2;
    cout << "Введите номер задания: ";
    cin >> zadanie;
    
    switch (zadanie)
    {
        
    case 1:// ЗАДАНИЕ1
    cout << "Определим значение угла в радианах.\nВведите значение угла α (0 < α < 360) = ";
    cin >> alfa;
    if (alfa > 360)
    {
        cout << "Угол α должен лежать в границах от 0 до 360 градусов.\n";
    }
    else if ( alfa == 180)
    {
        cout << "Значение угла в радианах = π\n";
    }
    else
    cout << "Значение угла в радианах = " << (alfa * pi) / 180 << endl;
    break;
    
    case 2://ЗАДАНИЕ2
    cout << "Определим значение угла в радианах.\nВведите значение угла α (0 < α < 2*π) = ";
    cin >> alfa;
    if (alfa > 2*pi)
    {
        cout << "Угол α должен лежать в границах от 0 до 2*π градусов.\n";
    }
    else if ( ((alfa * 180) / pi) == 180 )
    {
        cout << "Значение угла в радианах = π\n";
    }
    else
    cout << "Значение угла в радианах = " << (alfa * 180) / pi << endl;
    break;
    
    case 3://ЗАДАНИЕ3
    cout << "Известно, что X кг конфет стоит A рублей.\nОпределим, сколько стоит 1 кг и Y кг этих же конфет?\nВведите значение X = ";
    cin >> X;
    cout << "Введите стоимость X кг конфет, A = ";
    cin >> A ;
    cout << "Введите значение Y = ";
    cin >> Y;
    a = A/X;
    cout << "1 кг конфет стоит " << a << " рублей.\n";
    cout << Y << " кг конфет стоит " << Y*a << " рублей.";
    break;
    
    case 4://ЗАДАНИЕ4
    cout << "Определим расстояние между автомобилями через T часов, если автомобили удаляются друг от друга.\nВведите значение V1 км/ч = ";
    cin >> V1;
    cout << "Введите значение v2 км/ч = ";
    cin >> V2 ;
    cout << "Введите значение S км = ";
    cin >> S;
    cout << "Введите значение T час = ";
    cin >> T;
    cout << " Расстояние между автомобилями = " << S + V1*T + V2*T << "км" <<  endl;
    break;
    
    case 5://ЗАДАНИЕ5
    cout << "Решим линейное уравнение A*x + B = 0, заданное своими коэффициентами A и B (коэффициент A не равен 0).\nВведите значение A = ";
    cin >> A;
    cout << "Введите значение B = ";
    cin >> B ;
    if (A ==! 0)
    {
        x = -1*B / A;
        cout << "x = " << x << endl;
    }
    else
    cout << "A равно нулю" << endl;
    break;
    
    case 6://ЗАДАНИЕ6
    cout << "Найдем решение системы линейных уравнений вида A1*x + B1*y = C1, A2*x + B2*y = C2.\nВведите значение A1 = ";
    cin >> A1;
    cout << "Введите значение B1 = ";
    cin >> B1;
    cout << "Введите значение C1 = ";
    cin >> C1;
    cout << "Введите значение A2 = ";
    cin >> A2;
    cout << "Введите значение B2 = ";
    cin >> B2;
    cout << "Введите значение C2 = ";
    cin >> C2 ;
    y = (A1*C2 - A2*C1) / (A1*B2 - A2*B1);
    x = (B2*C1 - B1*C2) / (B2*A1 - B1*A2);
    if (x == -0)
    {
        x = 0;
    }
    else if (y == -0)
    {
        y = 0;
    }
    cout << "x = " << x << "\ny = " << y << endl;
    break;
    }
    return 0;
    
}
