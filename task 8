#include <iostream>
#include <math.h>
using namespace std;

int main()
{   
    int zadanie, C;
    double B, K, A, n, a, c;
    
    
    cout << "Введите номер задания: ";
    cin >> zadanie;
    
    switch(zadanie)
    {
        
    case 1:
    cout << "Найдем количество полных килобайтов, которые занимает файл в байтах.\nРазмер файла в байтах = ";
    cin >> B;
    K = B / 1024;
    K = ceil(K);  // ceil() округляет к большему; floor() к меньшему
    cout << "Объем в килобайтах = " << K << endl;
    break;
    
    case 2:
    cout << "Найдем сколько раз отрезок В помещается в отрезок А без наложений.\nВведите число А = ";
    cin >> A;
    cout << "Введите число В = ";
    cin >> B;
    if (A > B)
    {
        n = floor(A / B);
        cout << "Отрезок B помещается в отрезке А " << n << " раз.";
    }
    else
    cout << "A < B.";
    break;
    
    case 3:
    cout << "Найдем длину незанятой части отрезка A, если на отрезке А размещено максимальное количество отрезков длины В.\nВведите число А = ";
    cin >> A;
    cout << "Введите число В = ";
    cin >> B;
    if (A > B)
    { 
        n = floor(A / B);
        B = B * n;
        K = A - B;
        cout << "Длина незанятой части А = " << K << endl;
    }
    else
    cout  <<"A < B.";
    break;
    
    case 4:
    cout << "Выведем число, полученное при перестановке цифр исходного числа.\nВведите двузначное число = ";
    cin >> C;
    if (C < 100 && C >= 10)
    {
        a = C / 10;
        c = C % 10;
        C = c * 10 +  a;
        cout << "Число после перестановки равно = " << C << endl;
    }
    else
    cout << "Число не двузначное.";
    }
    
    return 0;
}
